//5. Crie um algoritmo que leia o valor do salário mínimo e o valor do salário de um usuário,
//calcule a quantidade de salários mínimos esse usuário ganha e imprima o resultado.
//(1SM=R$788,00)


package expace;

import java.util.Scanner;

public class Exercicio5 {

	public static void main(String[] args) {
		
Scanner sc = new Scanner(System.in); 
		
		System.out.println("Imforme o salário do usuário: ");
        double salarioUs = sc.nextDouble();
		
        double salarioMin = 788;
        
        double quantSM = (salarioUs/salarioMin);
        
        System.out.println("A quantidade de salários mínimos esse usuário ganha é: " +quantSM);

	}

}
