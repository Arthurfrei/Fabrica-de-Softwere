//1. Faça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e 
//mostre-a expressa em dias. Leve em consideração o ano com 365 dias e o mês com 30. 
//(Ex: 3 anos, 2 meses e 15 dias = 1170 dias.)

package expace;

import java.util.Scanner;

public class Exercicio1 {

	public static void main(String[] args) {
		
Scanner sc = new Scanner(System.in); 
		
		System.out.println("Imforme os anos: ");
        int valor1 = sc.nextInt();
		
        System.out.println("Imforme os meses: ");
        int valor2 = sc.nextInt();
		
        System.out.println("Imforme os dias: ");
        int valor3 = sc.nextInt();
		
        int idade = ((valor1*365) + (valor2*30) + valor3);
        System.out.println(idade);
        

	}

}
